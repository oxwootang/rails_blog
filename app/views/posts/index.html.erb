<h1>All Posts</h1>

<%= link_to 'Home', controller: 'welcome' %>
<%= link_to 'Create New Post', new_post_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show Post', post_path(post) %></td>
      <td><%= link_to 'Edit Post', edit_post_path(post) %></td>
      <td><%= link_to 'Delete Post', post_path(post),
      method: :delete,
      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
